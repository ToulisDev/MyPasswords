<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/database"
            android:layout_margin="8dp"
            android:contentDescription="@string/logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pdatabase"
            android:textColor="@color/enigma_color"
            android:textSize="36sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingHorizontal="35dp"
        android:layout_marginTop="35dp"
        >
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_1_shape"
            android:inputType="textEmailAddress"
            android:hint="@string/username"
            android:textColorHint="@color/white"
            android:fontFamily="@font/sfproregular"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:autofillHints="username"/>

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_1_shape"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textColorHint="@color/white"
            android:fontFamily="@font/sfproregular"
            android:layout_marginTop="34dp"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:autofillHints="password" />
        <TextView
            android:id="@+id/textInput_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="invisible"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:textColor="@color/username_not_found_color"
            android:textSize="14sp"
            android:fontFamily="@font/sfproregular"
            android:text=""/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/log_in"
            android:textSize="18sp"
            android:fontFamily="@font/sfprosemibold"
            android:textColor="#ffffff"
            android:layout_marginTop="54dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ripple_effect_raise"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_signup"
            android:gravity="center"
            android:background="@drawable/ripple_effect_text"
            android:textColor="@color/enigma_color"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/don_t_have_an_account_sign_up"
            android:textSize="14sp"
            android:fontFamily="@font/sfprolight"/>
    </LinearLayout>

</LinearLayout>